# MSP Platform Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

platform:
  version: "{{ msp_platform_version | default('1.0.0-beta') }}"
  deployment_timestamp: "{{ ansible_date_time.iso8601 }}"
  deployment_type: "{{ infrastructure_type | default('msp_core') }}"

database:
  host: "{{ msp_db_host | default('localhost') }}"
  port: "{{ msp_db_port | default(5432) }}"
  name: "{{ msp_db_name | default('msp_platform') }}"
  user: "{{ msp_db_user | default('msp_user') }}"
  password: "{{ msp_db_password | default('changeme') }}"

redis:
  host: "{{ msp_redis_host | default('localhost') }}"
  port: "{{ msp_redis_port | default(6379) }}"
  
awx:
  admin_user: "{{ awx_admin_user | default('admin') }}"
  admin_password: "{{ awx_admin_password | default('changeme') }}"
  secret_key: "{{ awx_secret_key | default('changeme') }}"
  web_port: "{{ awx_web_port | default(8080) }}"

monitoring:
  prometheus_port: "{{ prometheus_port | default(9090) }}"
  grafana_port: "{{ grafana_port | default(3000) }}"
  alertmanager_port: "{{ alertmanager_port | default(9093) }}"

client_management:
  git_repo_base: "{{ msp_git_repo_base | default('/opt/msp/clients/repositories') }}"
  wireguard_hub_port: "{{ msp_wireguard_port | default(51820) }}"
  ssh_jumphost_port: "{{ msp_ssh_jumphost_port | default(2222) }}"

security:
  ssl_enabled: "{{ msp_ssl_enabled | default(true) }}"
  cert_path: "{{ msp_cert_path | default('/etc/ssl/certs/msp.crt') }}"
  key_path: "{{ msp_key_path | default('/etc/ssl/private/msp.key') }}"

logging:
  level: "{{ msp_log_level | default('INFO') }}"
  syslog_server: "{{ msp_syslog_server | default('localhost') }}"
  retention_days: "{{ msp_log_retention | default(30) }}"

clients:
  default_update_policy: "{{ msp_default_update_policy | default('security') }}"
  default_maintenance_window: "{{ msp_default_maintenance_window | default('02:00-04:00') }}"
  default_firewall_policy: "{{ msp_default_firewall_policy | default('restrictive') }}"